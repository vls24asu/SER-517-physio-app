<div class="profile-container">
  <h1 class="profile-title">Profile</h1>

  <div class="profile-card user-info-card">
    <div class="user-avatar">
      <%= user.fullName.charAt(0).toUpperCase() %>
    </div>
    <h2 class="user-name"><%= user.fullName %></h2>
    <p class="user-email"><%= user.email %></p>
    <a href="/profile/edit" class="btn btn-edit-profile">Edit profile</a>
    <form action="/logout" method="POST" class="logout-form">
      <button type="submit" class="btn btn-logout">Logout</button>
    </form>
  </div>

  <div class="profile-card stats-card">
    <h3 class="card-title">Your stats</h3>
    <div class="stats-grid">
      <div class="stat-item">
        <p class="stat-label">Total sessions</p>
        <p class="stat-value"><%= stats.totalSessions %></p>
      </div>
      <div class="stat-item">
        <p class="stat-label">Total time</p>
        <p class="stat-value"><%= stats.totalTime %>h</p>
      </div>
      <div class="stat-item">
        <p class="stat-label">Streak</p>
        <p class="stat-value"><%= stats.streak %></p>
      </div>
    </div>
    
    <div class="action-buttons">
      <a href="/achievements" class="action-btn">
        <i class="bi bi-trophy-fill"></i>
        <span>Achievements</span>
      </a>
      <a href="/intensity" class="action-btn">
        <span class="action-icon">ðŸ’ª</span>
        <span>Intensity</span>
      </a>
      <a href="<%= user.twofaEnabled ? '/twofa/disable' : '/twofa/setup' %>" class="action-btn">
        <i class="bi bi-shield-lock-fill"></i>
        <span><%= user.twofaEnabled ? 'Disable 2FA' : 'Enable 2FA' %></span>
      </a>
      <a href="/settings" class="action-btn">
        <i class="bi bi-gear-fill"></i>
        <span>Settings</span>
      </a>
    </div>
  </div>
</div>

<%- include('../partials/bottomNav') %>
