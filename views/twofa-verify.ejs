<div class="row justify-content-center flex-grow-1">
  <div class="col-md-5 col-lg-4 d-flex flex-column align-items-center text-center">

    <h2 class="fw-bold mb-1 mt-4">Enter Two-Factor Code</h2>
    <p class="text-muted mb-4">Open your authenticator app and enter the 6-digit code</p>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger w-100"><%= error %></div>
    <% } %>

    <form action="/twofa/verify" method="POST" class="w-100 d-flex flex-column flex-grow-1">
      <div class="mb-3 text-start">
        <label for="token" class="form-label">6-digit code</label>
        <input
          type="text"
          id="token"
          name="token"
          class="form-control"
          placeholder="123456"
          pattern="[0-9]{6}"
          maxlength="6"
          inputmode="numeric"
          required
          autofocus
        >
      </div>

      <div class="flex-grow-1"></div>

      <button type="submit" class="btn w-100 fw-semibold py-2 rounded-pill mb-2" style="background-color: #F5A623; color: #000;">
        Verify
      </button>

      <p class="text-center mt-2 mb-4">
        <a href="/login" class="text-warning text-decoration-none">Back to login</a>
      </p>
    </form>

  </div>
</div>
